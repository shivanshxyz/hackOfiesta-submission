{
	"manifest_version": 2,

	"name": "Sahaaya",
	"description": "A web accessibility tool to enhance reading abilities",
	"version": "0.1.3",

	"options_page" : "customize.html",

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "index.html"
	},
	"permissions": [
		"activeTab",
		"storage"
	],
	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	}
}
